# Backend Environment Variables Template for Render

# Server
# Note: Render automatically provides PORT environment variable
# You don't need to set this in Render - it's handled automatically
# For local development, this matches the fallback in index.js (PORT || 8000)
PORT=8000
NODE_ENV=production

# Database
MONGODB_URI=your_mongodb_connection_string

# Frontend URL
FRONTEND_URL=https://synapse-net.netlify.app

# JWT Secrets
ACCESS_TOKEN_SECRET=your_access_token_secret
ACCESS_TOKEN_EXPIRY=15m
REFRESH_TOKEN_SECRET=your_refresh_token_secret
REFRESH_TOKEN_EXPIRY=7d

# Cloudinary (for file uploads)
CLOUDINARY_CLOUD_NAME=your_cloudinary_name
CLOUDINARY_API_KEY=your_cloudinary_key
CLOUDINARY_API_SECRET=your_cloudinary_secret

# Other secrets as needed
